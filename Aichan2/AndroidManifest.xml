<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.aichan2"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="16" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Light.NoTitleBar"
        android:name="com.example.aichan2.App">
        <activity
            android:name="com.example.aichan2.MainActivity"
            android:label="@string/app_name"
       		android:windowSoftInputMode="adjustPan" >
        </activity>
        <activity android:name="NextActivity"
            	  android:theme="@android:style/Theme.Translucent.NoTitleBar"></activity>
        <activity android:name="MenuActivity"
            	  android:theme="@style/MenuActivityTheme"></activity>
        <activity android:name="MainPreferenceActivity"></activity>
        <activity android:name="RemoteDBAccessActivity"></activity>
        <activity android:name="NewsActivity"></activity>
        <activity android:name="WeatherActivity"></activity>
        <activity android:name="WeatherSettingActivity"></activity>
        <activity android:name="BootBranchActivity"
            	  android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter></activity>
        <activity android:name="FirstBootActivity"
            	  android:noHistory="true"></activity>
        <activity android:name="NewWordActivity"></activity>
        <activity android:name="SignUpActivity"></activity>
    </application>

</manifest>
